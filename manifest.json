{
  "name": "Fontcycler",
  "description": "Preview fonts on current page",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "file://*/*"],
      "css" : ["context_menu/style.css"]
    }
],
  "browser_action": {
    "default_title": "Fontcycler"
  },
  "manifest_version": 2
}
